<div class="row">
  <div class="col-sm-3">
    <%= render 'partials/lateral' %>  
  </div>
  <div class="col-sm-9">
    
          <div class="col-sm-5" >            
             <%= image_tag @product.image.url(:medium), :class => "img-responsive center-block img-frame" %>
          </div>
          <div class="col-sm-4">
              <p>
                <strong>Nombre:</strong>
              <%= @product.title %>
              </p>
              
              <p>
                <strong>Precio:</strong>
                <%= @product.price %>
              </p>
            
              <p>
                <strong>Categoría:</strong>
                <%= @product.category %>
              </p>

              <p>
                <strong>Marca:</strong>
                <%= @product.brand %>
              </p>

              <p>
                <strong>Descripción:</strong>
                <%= @product.description %>
              </p>

          </div>
    
  </div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
